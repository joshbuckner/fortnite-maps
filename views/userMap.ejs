<%- include('partials/header') -%>

<%- include('partials/navbar') -%>

<!-- <%- include('partials/page_heading') -%> -->
	
	<section class="" id="userMap">
		<div class="container-fluid mb-5 mt-3">
			<div class="row">
				<div class="col-lg-12">
					<div class="row m-0">
						<div class="col-xl-6 p-2">
							<div class="card shadow-sm text-white lighter-gray-section h-100 submit-success pb-0">
								<div class="user-map-name text-auto-lg lh-0 ml-4"><%= map.name %><br></div>
								<h3 class="text-muted text-auto-sm ml-4">By <%= map.author %></h3>
							</div>
						</div>
						<div class="col-xl-4 p-2">
							<div class="card shadow-sm text-white text-center lighter-gray-section h-100 p-4 m-0">
								<a onclick="copyToClipboard()">
									<h1 id="map-code-text" class="submit-success text-auto-md "><%= map.code %></h1>
									<div id="copy-code" class="submit-success text-muted text-auto-xs">Island Code (Click to Copy)</div>
								</a>
							</div>
						</div>
						<div class="col-xl-2 p-2">
							<div class="card shadow-sm text-white text-center lighter-gray-section h-100 p-4 m-0">
								<h1 class="submit-success text-auto-md">23,493</h1>
								<div class="submit-success text-muted text-auto-xs">Views</div>
						</div>
						</div>
					</div>
				</div>
				<div class="col-xl-6 pl-4 pr-2 py-2">
					<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
					  <div class="carousel-inner">
					    <div class="carousel-item active">
					      <img class="d-block w-100 rounded" src="<%= map.photo %>" alt="First slide">
					    </div>
					    <div class="carousel-item">
					      <img class="d-block w-100 rounded" src="/images/0940-9970-7913.jpg" alt="Second slide">
					    </div>
					    <div class="carousel-item">
					      <img class="d-block w-100 rounded" src="/images/0940-9970-7913v3.jpg" alt="Third slide">
					    </div>
					    <div class="carousel-item">
					        <div class="embed-responsive embed-responsive-16by9 rounded">
					        	<iframe class="embed-responsive-item" src="https://www.youtube.com/embed/QAPYH9QnYEU" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					  	    </div>
					    </div>
					  </div>
					</div>
					  	<div class="row pt-3">
					  		<div class="col-3 my-3" data-target="#carouselExampleIndicators" data-slide-to="0">
					  			<img class="img-fluid rounded" src="<%= map.photo %>">
					  		</div>
					  		<div class="col-3 my-3" data-target="#carouselExampleIndicators" data-slide-to="1">
					  			<img class="img-fluid rounded" src="/images/0940-9970-7913.jpg">
					  		</div>
					  		<div class="col-3 my-3" data-target="#carouselExampleIndicators" data-slide-to="2">
					  			<img class="img-fluid rounded" src="/images/0940-9970-7913v3.jpg">
					  		</div>
					  		<div class="col-3" data-target="#carouselExampleIndicators" data-slide-to="3">
					  			<img class="img-fluid rounded" src="https://img.youtube.com/vi/QAPYH9QnYEU/hqdefault.jpg">
					  		</div>
					  	</div>
					</div>
				</div>
			</div>
		</div>


	</section>

<%- include('partials/footer') -%>