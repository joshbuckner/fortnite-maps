<%- include('partials/header') -%>

<%- include('partials/navbar') -%>

<!-- <%- include('partials/page_heading') -%> -->
	
<section class="" id="userMap">
	<div class="container mb-5 mt-4">
		<div class="row">
			<div class="col-xl-6 col-lg-5 mb-4">
				<div class="text-white">
				    <div class="card-body pt-5">
						<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
					  		<div class="carousel-inner">
					    		<div class="carousel-item active">
					      			<img class="d-block w-100" src="<%= map.photo %>" alt="First slide">
					    		</div>
					    		<div class="carousel-item">
					      			<img class="d-block w-100" src="/images/0940-9970-7913.jpg" alt="Second slide">
					    		</div>
					    		<div class="carousel-item">
					      			<img class="d-block w-100" src="/images/0940-9970-7913v3.jpg" alt="Third slide">
					    		</div>
					    		<div class="carousel-item">
					        		<div class="embed-responsive embed-responsive-16by9">
					        			<iframe class="embed-responsive-item" src="https://www.youtube.com/embed/QAPYH9QnYEU" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					  	    		</div>
					    		</div>
					  		</div>
						</div>
					  	<div class="row pt-1">
					  		<div class="col-3 my-3" data-target="#carouselExampleIndicators" data-slide-to="0">
					  			<img class="img-fluid" src="<%= map.photo %>">
					  		</div>
					  		<div class="col-3 my-3" data-target="#carouselExampleIndicators" data-slide-to="1">
					  			<img class="img-fluid" src="/images/0940-9970-7913.jpg">
					  		</div>
					  		<div class="col-3 my-3" data-target="#carouselExampleIndicators" data-slide-to="2">
					  			<img class="img-fluid" src="/images/0940-9970-7913v3.jpg">
					  		</div>
					  		<div class="col-3 my-3 yt-div" data-target="#carouselExampleIndicators" data-slide-to="3">
					  			<img class="img-fluid" src="https://img.youtube.com/vi/QAPYH9QnYEU/hqdefault.jpg">
					  		</div>
					  	</div>
					</div>		
      			</div>
    		</div>
    		<div class="col-xl-6 col-lg-7 mb-4">
    			<div class="text-white h-100">
    				<div class="card-body">
    					<h1 class="display-3 submit-success island-title pt-4"><%= map.name %></h1>
    					<h5 class="island-views pb-4"><%= map.views %> <span class="h6">VIEWS</span></h5>
    					<h5 class="island-author pb-4">By <%= map.author %></h5>

    					<h3 class="island-bio submit-success fort-text-yellow pt-4 pb-5">TEAM 1: RUNNERS MUST GO TO THE TOP. TEAM 2: SNIPERS MUST STOP THE RUNNERS. SUPPORT A CREATOR: THE4CLEM4</h3>

    					<h6 class="island-author pb-2">ISLAND CODE <span class="text-muted">(Click to Copy)</span></h6>
    					<a id="copy-code" onclick="copyToClipboard()" data-toggle="tooltip" data-placement="bottom" title="Click to Copy">
    					<h3 id="map-code-text" class="display-4 island-code submit-success pb-0 mb-0"><%= map.code %></h3></a>
    						
					</div> 
				</div>   			
    		</div>
    		
  		</div>
	</div>
</section>

<%- include('partials/footer') -%>